{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}{{ encore_entry_link_tags('login') }}{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
	<div class="container">
		<div class="row">
			<div class="col d-flex justify-content-center">
				<div id="first">
					<div class="myform form ">
						<div class="logo mb-3">
							<div class="col-md-12 text-center">
								<h1>Login</h1>
							</div>
						</div>
						<form action="" method="post" name="login">
							<div class="form-group">
								<label for="exampleInputEmail1">Email</label>
								<input type="email" name="email" class="form-control" value="{{ last_username }}" id="email" aria-describedby="emailHelp" placeholder="Entrer votre email">
							</div>
							<div class="form-group">
								<label for="exampleInputEmail1">Mot De Passe</label>
								<input type="password" name="password" id="password" class="form-control" aria-describedby="emailHelp" placeholder="Entrer votre mot de passe">
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							</div>
							
							<div class="col-md-12 text-center ">
								<button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Connexion</button>
							</div>
							<div class="text-center p-t-90">
								<a class="txt1" href="{{ path('app_forgot_password_request') }}">
								Mot De Passe Oubli√© ?
								</a>
							</div>
							<div class="form-group">
								<p class="text-center"> Pas encore inscrit?
									<a href="{{path('app_register')}}" id="signup"> C'est par ici</a>
								</p>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>	

{% endblock %}
