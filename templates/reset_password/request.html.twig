{% extends 'base.html.twig' %}

{% block title %}Rénitialiser votre mot de passe{% endblock %}


{% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}

{% block body %} 
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="container-fluid">
    <h1>Rénitialiser votre mot de passe</h1>
</div>
<div class="container" style="border:3px solid #ddd;">
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrer votre adresse email et vous receverez un lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Valider</button>
    {{ form_end(requestForm) }}
</div>
{% endblock %}