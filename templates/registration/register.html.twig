{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}{{ encore_entry_link_tags('register') }}{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
    <div class="container">
        <div class="row">
            <div class="col d-flex justify-content-center">
                <div class="card card-4 ">
                    <div class="card-body">
                        <h2>Inscription</h2> 
                        <div class="row row-space">
                            <div class="col">{{ form_row(registrationForm.firstname) }}</div>
                            <div class="col">{{ form_row(registrationForm.lastname) }}</div>
                        </div>
                        <div class="row row-space">    
                            <div class="col">{{ form_row(registrationForm.adresse) }}</div>
                            <div class="col">{{ form_row(registrationForm.email) }}</div>
                        </div>
                        <div class="row row-space">
                            <div class="col">{{ form_row(registrationForm.plainPassword, {
                                label: 'Password'
                            }) }}</div>
                            <div class="col">{{ form_row(registrationForm.image) }}</div>
                        </div>
                    <button type="submit" class="button">Valider</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(registrationForm) }}
{% endblock %}
